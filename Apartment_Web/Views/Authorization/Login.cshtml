@model Apartment_Web.Models.DTO.LoginRequestDTO

<form method="post">
    <div class="container border p-5">
        <div class="row text-center">
            <h1>Log in</h1>
        </div>
        <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-6 offset-3 pb-2">
                <input asp-for="UserName" type="text" class="form-control" placeholder="Enter Username..." />
            </div>
           
            <div class="col-6 offset-3 pb-2">
                <input asp-for="Password" type="text" class="form-control" placeholder="Enter Password..." />

            </div>
            <div class="col-6 offset-3 pb-2">
                <button type="submit" class="form-control btn-secondary" value="Submit">Log in</button>

            </div>
        </div>
    </div>


</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
