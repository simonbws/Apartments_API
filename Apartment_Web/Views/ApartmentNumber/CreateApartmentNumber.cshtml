@model Apartment_Web.Models.ViewModel.ApartmentNumberCreateViewModel

<form asp-action="CreateApartmentNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-white-50">Create Apartment</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="ApartmentNumber.ApartmentNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ApartmentNumber.ApartmentNo" class="form-control" />
                <span asp-validation-for="ApartmentNumber.ApartmentNo" class="text-danger"></span>
            </div>



            <div class="col-2">
                <label asp-for="ApartmentNumber.ApartmentID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="ApartmentNumber.ApartmentID" class="form-select"asp-items="@Model.ApartmentList">
                    <option disabled selected>Select Apartment</option>
                </select>
                <span asp-validation-for="ApartmentNumber.ApartmentID" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ApartmentNumber.SpecialProperties" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="ApartmentNumber.SpecialProperties" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ApartmentNumber.SpecialProperties" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexApartment" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}