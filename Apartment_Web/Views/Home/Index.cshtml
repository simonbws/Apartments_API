@using Microsoft.AspNetCore.Components
@model IEnumerable<Apartment_Web.Models.DTO.ApartmentDTO>

<img class="d-block w-100" src="images/home/slide_one.jpg" alt="" />
<hr />
<div class="row" style="--bs-gutter-x:0">
    @foreach(var apartment in Model) {
        <div class="p-4 col-md-12 col-lg-6">     
            <div class="row" style="border-radius:20px; border: 1px solid #ffffff">
               <div class="col-4">
                   <img class="d-block w-100" style="border-radius:20px;" src="@apartment.ImagePath" alt="slide_one">
               </div>
               <div class="col-8">
                   <p class="card-title text-warning" style="font-size: xx-large">@apartment.Name</p>
                   <p class="card-text">
                       @((MarkupString)apartment.Details)
                   </p>
               </div>
               <div class="col-12">
                   <div class="row pb-3 pt-2">
                       <div class="col-4">
                           <a href="" class="btn btn-success form-control btn-block">Book</a>
                       </div>
                       <div class="col-4">
                           <span class="">Max Residents : @apartment.Occupancy People</span><br />
                           <span class="pt-1">Apartment Metres : @apartment.SquareFeet SquareFeet</span><br />
                           <div class="col-4">
                               <span class="text-warning float-end font-weight-bold pt-1" style="font-size:25px;">
                                   PLN
                                   <span style="border-bottom:1px solid #fffa42">
                                       @apartment.Rate.ToString("c");
                                   </span>
                               </span>

                           </div>
                        </div>
                   </div>
               </div>
            
            </div>
        </div>

    }
</div>